<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">
    <LinearLayout
        android:id="@+id/look_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/look_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="250dp"
            android:text="둘러보기"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/look_btn_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:scrollbarThumbHorizontal="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/look_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <FrameLayout
                android:id="@+id/look_btn1_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/flo"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="차트"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/look_btn2_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/unfocus_gray"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="영상"
                    android:textColor="@color/deep_gray"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/look_btn3_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/unfocus_gray"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:text="장르"
                    android:textColor="@color/deep_gray"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/look_btn4_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/unfocus_gray"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="상황"
                    android:textColor="@color/deep_gray"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/look_btn5_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/unfocus_gray"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="분위기"
                    android:textColor="@color/deep_gray"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/look_btn6_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_background_radius"
                    android:backgroundTint="@color/unfocus_gray"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="오디오"
                    android:textColor="@color/deep_gray"
                    android:gravity="center"
                    android:textSize="10dp"/>
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/look_content_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="@id/look_btn_sv"
        app:layout_constraintEnd_toEndOf="@id/look_btn_sv"
        app:layout_constraintTop_toBottomOf="@id/look_btn_sv">

        <LinearLayout
            android:id="@+id/look_btn1_content_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_btn1_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차트"
                    android:textSize="18dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="20dp"
                    android:textColor="@color/gray_color"/>
            </LinearLayout>

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="400dp"-->
<!--                android:src="@drawable/look_content_layout">-->
<!--            </ImageView>-->
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="400dp"-->
<!--                android:background="@drawable/look_content_layout"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:orientation="vertical"
                android:background="@drawable/look_content_lo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLO 차트"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19시 기준"
                        android:textSize="12dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/deep_gray"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▷ 전체듣기"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="150dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="12dp"
                    android:text="최근 24시간 집계, FLO 최고 인기곡 차트"
                    android:textColor="@color/deep_gray"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>