<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="85dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="#3F3FFF">
    
    <LinearLayout
        android:id="@+id/bs_play_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:id="@+id/bs_play_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/btn_editbar_play" />

        <TextView
            android:id="@+id/bs_play_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="듣기"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bs_list_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bs_play_lo"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bs_list_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/btn_editbar_addplaylist" />

        <TextView
            android:id="@+id/bs_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재생목록"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bs_mine_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bs_list_lo"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bs_mine_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@color/transparent"
            android:src="@drawable/btn_editbar_mylist" />

        <TextView
            android:id="@+id/bs_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 리스트"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bs_del_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bs_mine_lo"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bs_del_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/btn_editbar_delete" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>