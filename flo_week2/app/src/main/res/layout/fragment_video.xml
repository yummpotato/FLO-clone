<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/video_align_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순 ▼"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_align_tb">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_lilac_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="[MV] IU(아이유)_LILAC(라일락)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/gray_color"
                android:textStyle="normal"
                android:text="1theK (원더케이) * 103M views * 2 years ago"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_lilac_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="[MMA 2021] IU - Lilac"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/gray_color"
                android:textStyle="normal"
                android:text="이지금 [IU Official] * 4.7 views * 1 year ago"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_lilac_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="라일락 (LILAC) - 아이유 (IU) [뮤직뱅크] | KBS 210326 방송"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/gray_color"
                android:textStyle="normal"
                android:text="KBS KPOP * 2.2M views * 2 years ago"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>